---
import '../styles/global.css';
import SearchForm from '../components/SearchForm.tsx';

let title = 'Music Download';

---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />

	<style>
		header {
			display: flex;
			flex-direction: column;
			gap: 1em;
			max-width: min(100%, 68ch);
		}
	</style>

</head>
<body>
	<main>
		<header class="mb-4">
			<div>
				<h1 class="font-bold">Welcome to <a href="https://music.majder.com">Music download</a></h1>
			</div>
		</header>

		<SearchForm client:visible />
	</main>
</body>
</html>
